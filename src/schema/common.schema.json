{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://hero-sheet.com/schemas/common.schema.json",
  "type": "object",
  "title": "The Root Schema",
  "description": "The root schema is the schema that comprises the entire JSON document.",
  "properties": {
    "extras": { "$ref": "#/definitions/ModifierDefinitionList" },
    "flaws": { "$ref": "#/definitions/ModifierDefinitionList" }
  },
  "additionalProperties": false,
  "definitions": {
    "Name": {
      "type": "string",
      "pattern": "^[A-Za-z0-9: '-]+$"
    },
    "Description": {
      "type": "string"
    },
    "DocsURL": {
      "type": "string"
    },
    "PowerDefinition": {
      "type": "object",
      "properties": {
        "name": { "$ref": "#/definitions/Name" },
        "type": {},
        "action": {},
        "range": {},
        "duration": {},
        "resistance": {},
        "baseCost": {
          "anyOf": [
            { "type": "integer" },
            {
              "type": "string",
              "enum": [
                "powerOptions",
                "sum of components",
                "most expensive + 1 + 2 per other component",
                "most expensive + 1 per other component"
              ]
            }
          ]
        },
        "description": { "$ref": "#/definitions/Description" },
        "powerOptions": { "$ref": "#/definitions/PowerOptionDefinitionMap" },
        "extras": { "$ref": "#/definitions/ModifierDefinitionList" },
        "flaws": { "$ref": "#/definitions/ModifierDefinitionList" },
        "isArray": { "type":  "boolean" },
        "docsURL": { "$ref": "#/definitions/DocsURL" }
      },
      "required": [ "name", "baseCost", "description", "isArray" ],
      "additionalProperties": false
    },
    "PowerOptionDefinitionMap": {
      "type": "object",
      "patternProperties": {
        "^[A-Za-z0-9: '-]+$": { "$ref": "#/definitions/PowerOptionDefinition" },
        "additionalProperties": false
      }
    },
    "PowerOptionDefinition": {
      "type": "object",
      "properties": {
        "name": { "$ref": "#/definitions/Name" },
        "baseCost": {
          "oneOf": [
            { "type": "integer" },
            { "type": "number", "enum": [0.5] }
          ]
        },
        "description": { "$ref": "#/definitions/Description" }
      },
      "required": [ "name", "baseCost", "description" ],
      "additionalProperties": false
    },
    "ModifierDefinitionList": {
      "type": "array",
      "items": { "$ref": "#/definitions/ModifierDefinition" }
    },
    "ModifierDefinition": {
      "anyOf": [
        { "$ref": "#/definitions/ModifierDefinitionNoOptions"},
        { "$ref": "#/definitions/ModifierDefinitionWithOptions"}
      ]
    },
    "ModifierDefinitionNoOptions": {
      "type": "object",
      "properties": {
        "name": { "$ref": "#/definitions/Name" },
        "description": { "$ref": "#/definitions/Description" },
        "docsURL": { "$ref": "#/definitions/DocsURL" },
        "hasRanks": { "type": "boolean" },
        "costType": { "$ref": "#/definitions/CostType" },
        "cost": { "type": "integer" }
      },
      "required": ["name", "description", "hasRanks", "costType", "cost"],
      "additionalProperties": false
    },
    "ModifierDefinitionWithOptions": {
      "type": "object",
      "properties": {
        "name": { "$ref": "#/definitions/Name" },
        "description": { "$ref": "#/definitions/Description" },
        "docsURL": { "$ref": "#/definitions/DocsURL" },
        "modifierOptions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "$ref": "#/definitions/Name" },
              "description": { "$ref": "#/definitions/Description" },
              "docsURL": { "$ref": "#/definitions/DocsURL" },
              "hasRanks": { "type": "boolean" },
              "costType": { "$ref": "#/definitions/CostType" },
              "cost": { "type": "integer" }
            },
            "required": ["name", "description", "hasRanks", "costType", "cost"],
            "additionalProperties": false
          }
        }
      },
      "required": ["name", "description", "modifierOptions"],
      "additionalProperties": false
    },
    "CostType": {
      "type": "string",
      "enum": [
        "flatPoints",
        "flatPointsPerRankOfModifier",
        "flatPointsPer5PointsOfFinalCost",
        "pointsOfMultiplier",
        "pointsOfMultiplierPerRankOfModifier"
      ]
    },
    "PowerTemplate": {
      "type": "object",
      "properties": {
        "name": { "$ref": "#/definitions/Name" },
        "description": { "$ref": "#/definitions/Description" },
        "effect": {
          "type": "string",
          "enum": ["Affliction","Burrowing","Communication","Comprehend","Concealment","Create","Damage","Deflect","Element Control","Elongation","Enhanced Advantages","Enhanced Trait","Environment","Extra Limbs","Feature","Flight","Growth","Healing","Illusion","Immortality","Immunity","Insubstantial","Leaping","Luck Control","Mind Reading","Morph","Move Object","Movement","Nullify","Protection","Quickness","Regeneration","Remote Sensing","Senses","Shrinking","Speed","Summon","Swimming","Teleport","Transform","Variable","Weaken","Linked","Dynamic","Alternate"]
        },
        "option": {
          "type": "string"
        },
        "ranks": { "type":  "integer" },
        "extras": { "$ref":  "#/definitions/ModifierTemplateList" },
        "flaws": { "$ref":  "#/definitions/ModifierTemplateList" },
        "subpowers": { "$ref":  "#/definitions/PowerTemplateList" }
      },
      "required": ["name", "effect"],
      "additionalProperties": false
    },
    "ModifierTemplateList": {
      "type": "array",
      "items": { "$ref": "#/definitions/ModifierTemplate" }
    },
    "PowerTemplateList": {
      "type": "array",
      "items": { "$ref": "#/definitions/PowerTemplate" }
    },
    "ModifierTemplate": {
      "type": "object",
      "properties": {
        "modifierSource": { "$ref": "#/definitions/ModifierSource" },
        "modifierName": { "$ref":  "#/definitions/Name" },
        "optionName": { "$ref": "#/definitions/Name" },
        "ranks": { "type":  "integer" }
      },
      "required": ["modifierSource", "modifierName"],
      "additionalProperties": false
    },
    "ModifierSource": {
      "type": "string",
      "enum": ["standard", "special"]
    },
    "StandardEquipment": {
      "type": "object",
      "properties": {
        "name": { "$ref": "#/definitions/Name" },
        "description": { "$ref": "#/definitions/Description" },
        "cost": {
          "type": "integer",
          "minimum": 0
        },
        "category": {
          "type": "string",
          "enum": ["Electronics", "Criminal Gear", "Surveillance Gear", "Survival Gear", "Melee Weapons", "Ranged Weapons"]
        },
        "feature": {},
        "docsURL": { "$ref": "#/definitions/DocsURL" }
      },
      "required": ["name", "description", "cost", "category"],
      "additionalProperties": false
    }
  }
}
