{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://hero-sheet.com/schemas/samplePowers.json",
  "type": "object",
  "title": "The Root Schema",
  "description": "The root schema is the schema that comprises the entire JSON document.",
  "patternProperties": {
    "^[A-Za-z0-9: -]+$": { "$ref": "#/definitions/SamplePower" },
    "additionalProperties": false
  },
  "definitions": {
    "Name": {
      "type": "string",
      "pattern": "^[A-Za-z0-9: -]+$"
    },
    "SamplePower": {
      "type": "object",
      "properties": {
        "feature": { "$ref": "#/definitions/PowerTemplate" },
        "docsURL": { "type": "string" },
        "EXAMPLE": { }
      },
      "required": [ "feature" ],
      "additionalProperties": false
    },
    "PowerTemplate": {
      "type": "object",
      "properties": {
        "name": { "$ref":  "#/definitions/Name" },
        "description": { "type":  "string" },
        "effect": {
          "type": "string",
          "enum": ["Affliction","Burrowing","Communication","Comprehend","Concealment","Create","Damage","Deflect","Element Control","Elongation","Enhanced Advantages","Enhanced Trait","Environment","Extra Limbs","Feature","Flight","Growth","Healing","Illusion","Immortality","Immunity","Insubstantial","Leaping","Luck Control","Mind Reading","Morph","Move Object","Movement","Nullify","Protection","Quickness","Regeneration","Remote Sensing","Senses","Shrinking","Speed","Summon","Swimming","Teleport","Transform","Variable","Weaken","Linked","Dynamic","Alternate"]
        },
        "ranks": { "type":  "integer" },
        "extras": { "$ref":  "#/definitions/ModifierTemplateList" },
        "flaws": { "$ref":  "#/definitions/ModifierTemplateList" },
        "subpowers": { "$ref":  "#/definitions/PowerTemplateList" }
      },
      "required": ["name", "effect"],
      "additionalProperties": false
    },
    "ModifierTemplateList": {
      "type": "array",
      "items": { "$ref": "#/definitions/ModifierTemplate" }
    },
    "PowerTemplateList": {
      "type": "array",
      "items": { "$ref": "#/definitions/PowerTemplate" }
    },
    "ModifierTemplate": {
      "type": "object",
      "properties": {
        "modifierSource": { "$ref": "#/definitions/ModifierSource" },
        "modifierName": { "$ref":  "#/definitions/Name" },
        "optionName": { "$ref": "#/definitions/Name" },
        "ranks": { "type":  "integer" }
      },
      "required": ["modifierSource", "modifierName"],
      "additionalProperties": false
    },
    "ModifierSource": {
      "type": "string",
      "enum": ["standard", "special"]
    }
  }
}
